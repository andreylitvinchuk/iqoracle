<div class="">
  <div class="">
    <h3 class="box-title">Смена пароля</h3>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
      <div class="box-body">
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <% if @minimum_password_length %>
            <p class="help-block">(Минимум <%= @minimum_password_length %> символов)</p>
          <% end %>
        </div>

        <div class="form-group has-feedback">
          <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control', placeholder: 'Введите пароль' %>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>

        <div class="form-group has-feedback">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Подтвердите пароль' %>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
      </div>
      <div class="box-footer">
        <div class="row">
          <div class="col-md-6">
            <%= f.submit "Сменить пароль", class: 'btn btn-info pull-left' %>
          </div>
          <div class="col-md-6">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
  <% end %>

</div>