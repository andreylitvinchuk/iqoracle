<%- if controller_name != 'sessions' %>
  <%= link_to "Авторизация", new_session_path(resource_name), class:'btn btn-block' %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Забыли пароль?", new_password_path(resource_name), class:'btn ' %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Не получили инструкции по восстановлению пароля?", new_confirmation_path(resource_name), class:'btn btn-block mt-10' %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Не получили инструкции по разблокировке?", new_unlock_path(resource_name), class:'btn btn-block mt-10' %>
<% end -%>

