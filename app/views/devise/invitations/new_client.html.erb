<section class="content-header">
  <ol class="breadcrumb">
    <li>
      <a href="/">
        <i class="fa fa-dashboard"></i> Главная
      </a>
    </li>
    <li>
      <a href="/clients">Клиенты</a>
    </li>
    <li class="active">
      Пригласить клиента
    </li>
  </ol>
</section>

<div class=" col-xs-12 col-md-8 col-lg-6 ">
  <div class="">
    <h3 class="">Пригласить клиента</h3>
  </div>


  <div class="row">
  <%= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: {method: :post} do |f| %>
      <div class="col-xs-12 col-md-6">
        <div class="box-body">
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label 'name', 'Название' %>
            <%= f.text_field 'name', class: 'form-control' %>
          </div>
          <% resource.class.invite_key_fields.each do |field| -%>
              <div class="form-group">
                <%= f.label field, 'Email' %>
                <%= f.email_field field, class: 'form-control' %>
              </div>
          <% end -%>
          <%= hidden_field('user', 'role', :value => @role) %>
          <div class="form-group">
            <%= f.button :submit, t("devise.invitations.new.submit_button"), class: 'btn btn-info pull-left' %>
          </div>
        </div>

      </div>

  <% end %>
  </div>
</div>