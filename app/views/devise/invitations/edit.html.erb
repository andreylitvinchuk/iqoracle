<div class="">
  <div class="">
    <h3 class="box-title">Укажите пароль</h3>
  </div>

  <%= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: {method: :put} do |f| %>
      <div class="box-body">
        <%= f.hidden_field :invitation_token %>

        <%= devise_error_messages! %>
        <div class="form-group has-feedback">
          <%= f.input :password, :input_html => { :class => 'form-control', placeholder: 'Введите пароль' }, label: false %>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.input :password_confirmation, :input_html => { :class => 'form-control', placeholder: 'Подтвердите пароль' }, label: false %>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
      </div>
      <div class="box-footer">
        <div class="row">
          <div class="col-md-6">
            <%= f.button :submit, t("devise.invitations.edit.submit_button"), class: 'btn btn-primary btn-block btn-flat' %>
          </div>
        </div>
      </div>
  <% end %>
</div>